---
interface Props {
  title: string;
}

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1" />

    <title>{title}</title>
    <meta name="description" content="Personal Website of Heechan Lee" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.ico" />

    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Heechan Lee" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/assets/img/main.JPG" />
    <meta property="og:image:alt" content="Heechan Lee" />
    <meta property="og:locale" content="en" />
    <meta property="og:description" content="Personal Website of Heechan Lee" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
